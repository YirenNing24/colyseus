    "@types/koa": "^2.15.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^16.18.101",
    "@types/sinon": "^10.0.20",
    "all-contributors-cli": "^6.26.1",
    "assert": "^2.1.0",
    "benchmark": "^2.1.4",
    "c8": "^7.14.0",
    "colyseus.js": "0.15.18",
    "cors": "^2.8.5",
    "esbuild": "^0.14.54",
    "express": "^4.19.2",
